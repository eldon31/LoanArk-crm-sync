# LoanArk CRM Sync - Environment Configuration
# Copy this file to .env and replace with actual values

# Application Configuration
VITE_APP_NAME="LoanArk CRM Sync"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENV="development"

# Server Configuration
SERVER_HOST="localhost"
SERVER_PORT=3000
VITE_API_BASE_URL="http://localhost:3000/api"
VITE_FRONTEND_URL="http://localhost:5173"

# Database Configuration (Supabase)
VITE_SUPABASE_URL="https://your-project.supabase.co"
VITE_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"
DATABASE_CONNECTION_TIMEOUT=30000
DATABASE_MAX_CONNECTIONS=10

# HubSpot Configuration
HUBSPOT_API_BASE_URL="https://api.hubapi.com"
HUBSPOT_API_VERSION="v3"
VITE_HUBSPOT_CLIENT_ID="your-hubspot-client-id"
VITE_HUBSPOT_CLIENT_SECRET="your-hubspot-client-secret"
VITE_HUBSPOT_REDIRECT_URI="http://localhost:3000/auth/hubspot/callback"
HUBSPOT_TOKEN_REFRESH_BUFFER=300000
HUBSPOT_RATE_LIMIT_REQUESTS=100
HUBSPOT_RATE_LIMIT_WINDOW=60000
HUBSPOT_API_KEY="your-hubspot-private-app-key"

# Sync Configuration
SYNC_BATCH_SIZE=100
SYNC_MAX_RETRIES=3
SYNC_RETRY_DELAY=1000
SYNC_TIMEOUT=300000
SYNC_POLLING_INTERVAL=60000
SYNC_MAX_CONCURRENT_OPERATIONS=5

# Cache Configuration
CACHE_TTL=300000
CACHE_MAX_SIZE=1000
REDIS_URL="redis://localhost:6379"

# Security Configuration
JWT_SECRET="your-256-bit-secret"
JWT_EXPIRES_IN="24h"
BCRYPT_ROUNDS=12
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"
SESSION_TIMEOUT=3600000

# Logging Configuration
LOG_LEVEL="info"
LOG_FORMAT="json"
LOG_FILE_PATH="./logs/app.log"
LOG_MAX_SIZE="10m"
LOG_MAX_FILES=5

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_PORT=9090
ENABLE_PROMETHEUS_METRICS=true

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@loanark.com"

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,application/pdf"
UPLOAD_DESTINATION="./uploads"

# Feature Flags
ENABLE_REAL_TIME_SYNC=true
ENABLE_WEBHOOKS=true
ENABLE_AUDIT_LOGGING=true
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_BULK_OPERATIONS=true

# Third-party Integrations
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
DATADOG_API_KEY="your-datadog-api-key"
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Performance Tuning
GARBAGE_COLLECTION_INTERVAL=3600000
MEMORY_WARNING_THRESHOLD=512
CPU_WARNING_THRESHOLD=80

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION_KEY="your-backup-encryption-key"

# Development Configuration
VITE_DEBUG_MODE=true
VITE_ENABLE_DEVTOOLS=true
VITE_MOCK_API=false
